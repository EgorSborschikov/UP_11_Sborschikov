<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VanessaApp.MainWindow"
        Title="Вход в систему">
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="5">
       <StackPanel>
           <TextBlock Text = "АВТОРИЗАЦИЯ" FontSize="20" Margin="20" HorizontalAlignment="Center"/>
       </StackPanel>
       <StackPanel>
           <TextBox Name="LoginBox" Watermark="Логин" Width="300" Margin="0,0,0,10"/>
           <TextBox Name="PasswordBox" Watermark="Пароль" Width="300" Margin="0,0,0,10" PasswordChar="*"/>
       </StackPanel>
       <StackPanel>
           <Button Name="OnLogin" Content="Войти" HorizontalContentAlignment="Center" Width="300" Margin="10" Click="OnLoginClick"/>
       </StackPanel>
       
       <StackPanel>
           <Button Name="OnLoginGuest" Content="Войти как гость" HorizontalContentAlignment="Center" Width="300" Margin="10" Click="OnLoginGuest_Click"/>
       </StackPanel>
   </StackPanel>
</Window>
