<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="600" d:DesignHeight="450"
        Title="Продажа товара"
        x:Class="VanessaApp.Screens.Pharmacist.AddSale.AddSaleWindow">

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto"
          ColumnDefinitions="*,*"
          Margin="10">

        <TextBlock Text="Выберите клиента:" Margin="5"/>
        <ComboBox Grid.Row="0" Grid.Column="0"
                  Margin="5" Width="300" HorizontalAlignment="Left"
                  Name="ClientsComboBox" PlaceholderText="Клиенты"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Выберите товары:" Margin="5"/>
        <DataGrid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                  AutoGenerateColumns="False"
                  Margin="5" Height="250"
                  Name="ProductsDataGrid">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Выбор" />
                <DataGridTextColumn Header="Название" />
                <DataGridTextColumn Header="Цена" />
                <DataGridTextColumn Header="Цена" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="3" Grid.Column="0"
                   Margin="5" FontWeight="Bold"/>

        <Button Grid.Row="4" Grid.Column="1"
                Content="Оплатить"
                Click="PayButton_Click"
                Margin="5" Width="120" HorizontalAlignment="Right"/>
    </Grid>
</Window>
